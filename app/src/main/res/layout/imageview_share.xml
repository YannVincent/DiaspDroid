<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView android:id="@+id/imageview_share_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginTop="12sp"
        android:contentDescription="Image que je partage"
        android:src="@drawable/ic_launcher"/>

    <ImageView android:id="@+id/imageview_share_image_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="24sp"
        android:minHeight="24sp"
        android:contentDescription="Image que je partage"
        android:src="@android:drawable/presence_offline"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageview_share_image"
        android:layout_alignEnd="@+id/imageview_share_image" />

</RelativeLayout>