<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip"
    android:background="@drawable/borderbg">
    <!--<ScrollView android:id="@+id/scrollpostnextgen"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content">-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView android:id="@+id/postnextgen_avatar"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginRight="6dip"
            android:contentDescription="Image Avatar de mon amis"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher" />
        <TextView android:id="@+id/postnextgen_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/postnextgen_avatar"
            android:gravity="center_vertical"
            android:text="Disapora User Test"
            android:textColor="#3f8fba"
            android:textStyle="bold"
            android:textSize="16sp" />
        <TextView android:id="@+id/postnextgen_datetime"
            android:layout_below="@id/postnextgen_user"
            android:layout_width="fill_parent"
            android:layout_height="18dip"
            android:layout_toRightOf="@id/postnextgen_avatar"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="1 janv. 2000 Ã  23:02"
            android:textColor="#999999"
            android:textSize="12sp" />
    </RelativeLayout>
        <HorizontalScrollView android:id="@+id/scrollpostnextgen_images"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content">
            <LinearLayout android:id="@+id/postnextgen_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>
        <TextView android:id="@+id/scrollpostnextgen_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="linoleum de la venga del tura\nBah si me que lansfd"
            android:textColor="@color/abc_primary_text_material_light"
                  android:textSize="@dimen/abc_text_size_body_2_material"
            android:layout_below="@id/scrollpostnextgen_images"/>
    <!--</ScrollView>-->

</LinearLayout>